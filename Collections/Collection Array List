using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

using System.Collections;

namespace CollectionArrayList
{
    class Program
    {
        static void Main(string[] args)
        {
            ArrayList a1 = new ArrayList();
            Console.WriteLine("Adding some numbers:");
            a1.Add(45);
            a1.Add(78);
            a1.Add(33);
            a1.Add(12);
            a1.Add(5);

            Console.WriteLine("\n\n\t Capacity:{0}", a1.Capacity);
            Console.WriteLine("\n\n\t Count:{0} ", a1.Count);

            Console.WriteLine("\n\n\t Content: ");
            foreach(int i in a1)
            {
                Console.Write(i + " ");
            }
            Console.WriteLine();

            Console.WriteLine("\n\n\t Sorting Content:");
            a1.Sort();
            foreach(int i in a1)
            {
                Console.Write(i + " ");
            }
            Console.WriteLine();
            Console.ReadLine();
        }
    }
}
